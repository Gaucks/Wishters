{% extends "WishtersUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block body %}
    <div class="wishters-registration">

        <div class="register-header text-center">
            <h1>Wishters</h1>
            <p>Be better with others</p>
        </div>

        <div class="register-body">

            <div class="col-xs-12 col-md-4 col-md-offset-4 ">

                <div class="headline text-center">
                    <p>Renseignez vos identifiants</p>
                </div>

                <hr />

                {% if error %}
                    <div class="has-error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <form action="{{ path("fos_user_security_check") }}" method="post">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

                    <div class="form-group">
                        <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control input-xs" placeholder="Nom d'utilisateur"/>
                    </div>

                    <div class="form-group">
                        <input type="password" id="password" name="_password" required="required" class="form-control input-xs" placeholder="Mot de passe"/>
                    </div>
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                    <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>


                    <div>
                        <br/>
                        <button type="submit" id="_submit" name="_submit" class="btn btn-wishters btn-radius-30 btn-block">{{ 'security.login.submit'|trans }} <i class="fa fa-check pull-right"></i></button>

                    </div>
                </form>

                <hr>
                <div class="text-center already-registered">
                        <a href="{{ path('fos_user_security_login') }}">
                            Vous n'avez pas encore de compte? <strong>Inscrivez vous</strong>
                        </a>
                </div>
            </div>
            <div class="clearfix"></div>

        </div>
    </div>
{% endblock body %}
